import os, sys
import pygame
from pygame.locals import *

class PyManMain:

    def __init__(self, width = 480, height = 800):
        pygame.init()
        self.width = width
        self.height = height
        self.screen = pygame.display.set_mode((self.width, self.height))

    def Main(self):
         while 1:
            for event in pygame.event.get():
                if event.type == pygame.QUIT: 
                    sys.exit()

if __name__ == "__main__":
    Window = PyManMain()
    Window.Main()
    
    
